<header
  id="landing-header" 
  class='flex items-center fixed top-0 py-6 px-10 w-full justify-between'
  >
  <img src='' alt='This is the image' />
  <nav>
    <ul class='flex text-sm [&>li>a]:inline-block [&>li>a]:py-2 [&>li>a]:px-4'>
      <li><a href='#'>Home</a></li>
      <li><a href='#'>Projects</a></li>
      <li><a href='#'>About</a></li>
      <li><a href='#'>Contact</a></li>
    </ul>
  </nav>

  <div
    id='menu-backdrop'
    class={`
      absolute bg-white/5 backdrop-blur-lg rounded-md
      translate-x-[var(--left)] 
      translate-y-[var(--top)] left-0 top-0
      w-[var(--width)] h-[var(--height)] 
      transition-all duration-500 
      ease-in-out opacity-0
      -z-10
    `}
  >
  </div>
</header>

<script>
  const listItem = document.querySelectorAll("#landing-header li") 
  const menuBackbrop = document.querySelector("#menu-backdrop") as HTMLElement

  listItem.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      const {left, width, top, height} = item.getBoundingClientRect();

      menuBackbrop.style.setProperty('--left', `${left}px`)
      menuBackbrop.style.setProperty('--width', `${width}px`)
      menuBackbrop.style.setProperty('--top', `${top}px`)
      menuBackbrop.style.setProperty('--height', `${height}px`)

      menuBackbrop.style.opacity = "1";
      menuBackbrop.style.visibility = "visible"
    })

    item.addEventListener('mouseleave', () => {
      menuBackbrop.style.opacity = "0";
      menuBackbrop.style.visibility = "hidden"
    })
  });
</script>
