    class: "bg-black/20",
    icon: Express,
  },
  Css: {
    name: "CSS",
    class: "bg-black/20",
    icon: CssLogo,
  },
  Html: {
    name: "HTML",
    class: "bg-black/20",
    icon: HtmlLogo,
  },
  Tailwind: {
